<div id="login">
  <div class="col-sm-6 text-left">
	<label class="control-label" for="input-login-email">{{ entry_email }}</label>
	  <input type="text" name="email" value="" class="form-control" id="input-login-email" />
  </div>
  <div class="col-sm-6 text-left">
	<label class="control-label" for="input-login-password">{{ entry_password }} <a href="{{ forgotten }}" title="{{ text_forgotten }}" data-toggle="tooltip"><i class="fa fa-question-circle"></i></a></label>
	  <div class="input-group">
		<input type="password" name="password" value="" class="form-control" />
		<span class="input-group-btn">
		  <button type="button" id="button-login" data-loading-text="{{ text_loading }}" class="btn btn-primary">{{ button_login }}</button>
		</span>
	  </div>
  </div>
</div>

<script type="text/javascript"><!--
$('#login input').keydown(function(e) {
	if (e.keyCode == 13) {
		$('#button-login').click();
	}
});
//--></script>   