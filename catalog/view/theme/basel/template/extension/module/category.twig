<div class="widget">
<div class="widget-title">
    <p class="main-title"><span>{{ heading_title }}</span></p>
    <p class="widget-title-separator"><i class="icon-line-cross"></i></p>
</div>
<ul class="plain-menu cat">
{% for category in categories %}
   {% if category.category_id == category_id %}
     <li class="open active"><a href="{{ category.href }}" >{{ category.name }}</a>
      {% else %}
      <li><a href="{{ category.href }}" >{{ category.name }}</a> 
      {% endif %}
      {% if category.children %}
      <div class="sign"><i class="icon-arrow-right"></i></div>
      <ul>
      {% for child in category.children %}
      <li class="open active"><i class="icon-arrow-right"></i><a href="{{ child.href }}">{{ child.name }}</a></li>
      {% endfor %}
      </ul>
      {% endif %}
   </li>
{% endfor %}
</ul>
</div>
<script>        
	$('.plain-menu.cat li').bind().click(function(e) {
	$(this).toggleClass("open").find('>ul').stop(true, true).slideToggle(350)
	.end().siblings().find('>ul').slideUp().parent().removeClass("open");
	e.stopPropagation();
	});
	$('.plain-menu.cat li a').click(function(e) {
	e.stopPropagation();
	});
</script>