{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-html" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="alert alert-info">
      <i class="fa fa-info-circle"></i>&nbsp;{{ text_donation }}<br />
      {{ text_copyright }}
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %}
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    {% if (error_library) %}
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_library }}</div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-html" class="form-horizontal">
          {% for language in languages %}
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-meta-title-{{ language.code }}"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" />&nbsp;{{ entry_meta_title }}</label>
              <div class="col-sm-10">
                <input type="text" name="module_tltmultilang_meta_title_{{ language.code }}" value="{{ module_tltmultilang_meta_title[language.code] }}" placeholder="{{ entry_meta_title }}" id="input-meta-title-{{ language.code }}" class="form-control" />
                {% if (error_meta_title[language.code]) %}
                  <div class="text-danger">{{ error_meta_title[language.code] }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-meta-description-{{ language.code }}"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" />&nbsp;{{ entry_meta_description }}</label>
              <div class="col-sm-10">
                <textarea name="module_tltmultilang_meta_description_{{ language.code }}" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description-{{ language.code }}" class="form-control">{{ module_tltmultilang_meta_description[language.code] }}</textarea>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-meta-keyword-{{ language.code }}"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" />&nbsp;{{ entry_meta_keyword }}</label>
              <div class="col-sm-10">
                <textarea name="module_tltmultilang_meta_keyword_{{ language.code }}" rows="5" placeholder="{{ entry_meta_keyword }}" id="input-meta-keyword-{{ language.code }}" class="form-control">{{ module_tltmultilang_meta_keyword[language.code] }}</textarea>
              </div>
            </div>
          {% endfor %}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-twitter-status"><span data-toggle="tooltip" title="{{ help_twitter_status }}">{{ entry_twitter_status }}</span></label>
            <div class="col-sm-10">
              <select name="module_tltmultilang_twitter_status" id="input-twitter-status" class="form-control">
                {% if (module_tltmultilang_twitter_status) %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-twitter-card">{{ entry_twitter_card }}</label>
            <div class="col-sm-10">
              <select name="module_tltmultilang_twitter_card" id="input-twitter-card" class="form-control">
                {% if (module_tltmultilang_twitter_card) %}
                  <option value="1" selected="selected">{{ text_large_image }}</option>
                  <option value="0">{{ text_summary }}</option>
                {% else %}
                  <option value="1">{{ text_large_image }}</option>
                  <option value="0" selected="selected">{{ text_summary }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-twitter-name">{{ entry_twitter_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_tltmultilang_twitter_name" value="{{ module_tltmultilang_twitter_name }}" placeholder="{{ placeholder_username }}" id="input-twitter-name" class="form-control" />
              {% if (error_twitter_name) %}
                <div class="text-danger">{{ error_twitter_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-facebook-status"><span data-toggle="tooltip" title="{{ help_facebook_status }}">{{ entry_facebook_status }}</span></label>
            <div class="col-sm-10">
              <select name="module_tltmultilang_facebook_status" id="input-facebook-status" class="form-control">
                {% if (module_tltmultilang_facebook_status) %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-facebook-name">{{ entry_facebook_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_tltmultilang_facebook_name" value="{{ module_tltmultilang_facebook_name }}" placeholder="{{ entry_facebook_name }}" id="input-facebook-name" class="form-control" />
              {% if (error_facebook_name) %}
                <div class="text-danger">{{ error_facebook_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-facebook-appid">{{ entry_facebook_appid }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_tltmultilang_facebook_appid" value="{{ module_tltmultilang_facebook_appid }}" placeholder="{{ entry_facebook_appid }}" id="input-facebook-appid" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-image"><span data-toggle="tooltip" title="{{ help_image }}">{{ entry_image }}</span></label>
            <div class="col-sm-10">
              <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
              <input type="hidden" name="module_tltmultilang_image" value="{{ module_tltmultilang_image }}" id="input-image" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{ footer }}